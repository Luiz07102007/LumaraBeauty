  flex: 1;
  padding: 40px 30px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.agendamento-form h1 {
  font-size: 28px;
  margin-bottom: 20px;
  text-align: center;
  font-family: 'Ovo', serif;
  color: #2c1e1e;
}

.agendamento-form label {
  margin: 10px 0 5px;
  font-size: 15px;
  color: #2c1e1e;
}

.agendamento-form input,
.agendamento-form select {
  padding: 10px;
