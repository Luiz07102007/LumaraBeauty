<div class="services-container">
    <h1>Lumara’s Beauty</h1>
    <h2>Conheça os nossos serviços</h2>
    
<div class="services-grid">
    {{#each servicos}}
    <div class="service-card">
        <img src="{{this.icone}}" alt="Ícone {{this.nome}}" class="service-icon">
        <h2>{{this.nome}}</h2>
        <p>{{this.descricao}}</p>
        <p class="price">R$ {{this.preco}}</p>
    </div>
    {{/each}}
</div>

</div>

